{
  "extends": ["stylelint-config-standard"],
  "overrides": [
    {
      "files": ["**/*.css"],
      "customSyntax": "postcss-syntax",
      "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "tailwind",
              "layer",
              "apply",
              "responsive",
              "screen",
              "theme",
              "import"
            ]
          }
        ]
      }
    }
  ]
}
